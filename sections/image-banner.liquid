<div id="slick_main">
    <div class="slider-wrap">
      {%- for block in section.blocks -%}
        <div class="image-slider">
            <div class="img-wrap">
                {%assign ImageURL = block.settings.image %}
                   {%if ImageURL != blank %}
                                        <img class="util_pc" src=" {{ ImageURL | img_url }}">    
                                    {%else%}
                                  	    <img class="util_pc" src=" {{ 'slider_01.png' | asset_url }}">
                                    {%endif%}
<!--                {%assign ImageURL = section.settings.image %}
                                    {%if ImageURL != blank %}
                                        <img class="util_pc" src=" {{ ImageURL | img_url: 'master'}}">    
                                    {%else%}
                                  	    <img class="util_pc" src=" {{ 'slider_01.png' | asset_url }}">
                                    {%endif%} -->
                <img class="util_sp" src="assets/img/top/sp/sp_slider_01.png" alt="">
            </div>
            <div class="img-wrap">
                    {% if block.settings.image != blank %}
                        <img class="util_pc" src=" {{ block.settings.image | image_url: 'master' }} " alt="">
                    {% else %}
                        <img class="util_pc" src=" {{ 'slider_02.png' | asset_url }}">
                    {% endif %} 
            </div>
            <div class="img-wrap">
                    {% if block.settings.image != blank %}
                        <img class="util_pc" src=" {{ block.settings.image | image_url: 'master' }} " alt="">
                    {% else %}
                        <img class="util_pc" src=" {{ 'slider_01.png' | asset_url }}">
                    {% endif %} 
                <img class="util_sp" src="assets/img/top/sp/sp_slider_01.png" alt="">
            </div>
        </div>
      {%- endfor -%}

        <div class="dot_slider_main">
            <span class="start-num">01</span>
            <div class="slider-progress">
                <span></span>
            </div>
            <span class="end-num">03</span>
        </div>
    </div>
</div>
